@model EmployeeApp.ViewModel.EmployeeVM

<div class="card my-4">
    <div class="card-header bg-secondary py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> @(Model.Employee?.Id == 0 ? "Create" : "Update")Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form id="employee-form" class="row">
            <div class="row">
                <div class="col-10">
                    <input id="employee-id" asp-for="Employee.Id" hidden />
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.Name" class="ms-2"></label>
                        <input id="employee-name" asp-for="Employee.Name" class="form-control" />
                        <span asp-validation-for="Employee.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.Email" class="ms-2"></label>
                        <input id="employee-email" asp-for="Employee.Email" class="form-control" />
                        <span asp-validation-for="Employee.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.Phone" class="ms-2"></label>
                        <input id="employee-phone" asp-for="Employee.Phone" class="form-control" />
                    </div>
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.Salary" class="ms-2"></label>
                        <input id="employee-salary" asp-for="Employee.Salary" class="form-control" />
                    </div>
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.Address" class="ms-2"></label>
                        <input id="employee-address" asp-for="Employee.Address" class="form-control" />
                    </div>
                    <div class="form-group col-12 py-2">
                        <label asp-for="Employee.DepartmentId" class="ms-2"></label>
                        <select id="employee-departmentId" asp-for="Employee.DepartmentId" class="form-control">
                            <option disabled selected> Select Department</option>
                            @foreach (var department in Model.Departments)
                            {
                                <option value="@department.Id">@department.Name</option>
                            }
                        </select>
                    </div>
                    <div class="row pt-2 mt-3">
                        <div class="col-3 col-md-3">
                           <button type="submit" class="col-3 btn btn-primary mx-2">Save</button>
                        </div>
                        <div class="col-3 col-md-3">
                           <a asp-controller="Employee" asp-action="Index" class="col-3 btn btn-outline-primary form-control border">Back To List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/EmployeeUpsert.js"></script>
    <partial name="_ValidationScriptsPartial" />
}